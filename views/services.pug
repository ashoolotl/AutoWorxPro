extends base

block stylesheets 
    link(rel='stylesheet', href='/partials/navbar.css')
    link(rel='stylesheet', href='/featured.css')
    link(rel='stylesheet', href='/booking-appointment.css')
    link(rel='stylesheet', href='/cart.css')

block content

    #overlay

    header Featured Services

    .top-container
        each service, i  in services
            .top-item
                img(src=`/images/services/${service.photo}` alt=`Image of ${service.name}`)
                p= `0${i+1} ${service.name}`
        if user && user.role === 'admin'
            .top-item-add
                button#add
                    img(src='/images/add-new-service.png')
         


    //- popuphere
    #addServicePopup.popupContainer 
        .popupContent 
            span#closePopup.closePopup &times;
            h1 Add a Service 
            
            form#form
                
                label(for='name') Service Name 
                input(type='text', id='name' name='name' required)

                label(for='description') Service Description 
                input(type='text', id='description' name='description' required)
                
                label(for='duration') Service Duration in Minutes  
                input(type='number', id='duration' name='duration' required)

                label(for='photo')
                input(type='file', id='photo', name='photo', accept='image/*')

                fieldset
                    legend Select Vehicle Classification and Input Price
                    each vehicleClass in vehicleClassification 
                        label
                            input(type='checkbox', name='selectedItems', value=`${vehicleClass.name}`)
                            =vehicleClass.name 
                            input(type='number', name=`price`, min='1', value='1')

                button(type='submit') Submit

    .bottom-container 
        each service in services
            .bottom-item
                img(src=`/images/services/${service.photo}` alt=`Image of ${service.name}`)
                .bottom-item-content 
                    h2=service.name
                    p=service.description


                    if user && user.role === 'admin'
                        .buttons-container 
                            button#serviceEdit.edit-btn(type='button') Edit 
                            button#serviceDelete.delete-btn(type='button') Delete
                    else if user && user.role ==='user'
                        .buttons-container 
                            button#serviceAddToCart.edit-btn(type='button') Add To Cart 
                    else if user && user === 'nouser'
                        .buttons-container 
                            button#serviceAddToCartNoUser.edit-btn(type='button') Add to Cart
                        
block scripts 
    script(src='/js/addService.js')