extends base

block stylesheets 
    link(rel="stylesheet" href="/css/login.css")
block content
    .login-container 
        h2 Login to your Account 
        p3 Welcome back! Fill in the following details 

        form
            input(id='email',type='text', name='email',placeholder='you@example.com', required) 
            input(id='password', type='password', name='password', placeholder='●●●●●●●●' required) 
            button(type='submit') Log In 
        p Don't have an Account?
            a(href="register.html") Register Here
    .pictures 
        #title 
            img(src='/images/logo-red.png')

